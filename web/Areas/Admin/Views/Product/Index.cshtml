@model List<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6 text-primary"><h3 class="text-primary">Product</h2></div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New
            </a>
        </div>
    </div>
    <table class="table table-borderd table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.ISBN</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Author</td>
                <td>

                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-route-id="@obj.Id" asp-action="Edit" >
                        <i class="bi bi-pencil-square text-primary"></i>  
                        </a>
                        <a asp-controller="Product" asp-route-id="@obj.Id" asp-action="Delete" class="ps-3">
                        <i class="bi bi-trash3 text-primary"></i>  
                        </a>
                    </div>
                </td>
            </tr>   
            }
        </tbody>
        
    </table>
</div>